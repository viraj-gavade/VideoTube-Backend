<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Video Title - YouTube Clone</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }

        body {
            background-color: #f9f9f9;
            color: #030303;
        }

        .container {
            display: flex;
            padding: 20px;
            max-width: 1600px;
            margin: 0 auto;
        }

        /* Video Player Section */
        .video-player-section {
            flex: 2;
            margin-right: 20px;
        }

        .video-player {
            width: 100%;
            background-color: black;
            aspect-ratio: 16/9;
        }

        .video-title {
            font-size: 1.4em;
            font-weight: bold;
            margin: 15px 0 10px;
        }

        .video-meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .channel-info {
            display: flex;
            align-items: center;
        }

        .channel-avatar {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .channel-details {
            flex-grow: 1;
        }

        .channel-name {
            font-weight: bold;
        }

        .channel-subscribers {
            color: #606060;
            font-size: 0.9em;
        }

        .action-buttons {
            display: flex;
            align-items: center;
        }

        .like-button, .subscribe-button {
            background-color: #f2f2f2;
            border: none;
            padding: 10px 15px;
            margin-left: 10px;
            border-radius: 20px;
            cursor: pointer;
        }

        .subscribe-button {
            background-color: #cc0000;
            color: white;
        }

        /* Video Description */
        .video-description {
            background-color: #f2f2f2;
            padding: 15px;
            border-radius: 10px;
            margin-top: 15px;
        }

        .description-views {
            font-weight: bold;
            margin-bottom: 10px;
        }

        .description-text {
            color: #606060;
        }

        /* Recommended Videos Section */
        .recommended-videos {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .recommended-video {
            display: flex;
            margin-bottom: 10px;
            cursor: pointer;
        }

        .recommended-thumbnail {
            width: 168px;
            height: 94px;
            object-fit: cover;
            margin-right: 10px;
        }

        .recommended-info {
            flex-grow: 1;
        }

        .recommended-title {
            font-weight: bold;
            font-size: 0.9em;
            margin-bottom: 5px;
        }

        .recommended-details {
            color: #606060;
            font-size: 0.8em;
        }

        /* Comments Section */
        .comments-section {
            margin-top: 20px;
        }

        .comments-header {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .comment-input {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .comment-input img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 15px;
        }

        .comment-input input {
            flex-grow: 1;
            padding: 10px;
            border: none;
            border-bottom: 1px solid #d3d3d3;
            outline: none;
        }

        .single-comment {
            display: flex;
            margin-bottom: 15px;
        }

        .comment-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 15px;
        }

        .comment-content {
            flex-grow: 1;
        }

        .comment-author {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .comment-text {
            color: #030303;
        }
        .channe-name-link{
            text-decoration: none;
            color: #030303;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Video Player Section -->
        <div class="video-player-section">
            <div class="video-player">
                <!-- Placeholder for video player -->
                <video width="100%" height="100%" controls>
                    <source src="<%= video.videoFile %>" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </div>

            <div class="video-title">
                <%= video.title %>
            </div>

            <div class="video-meta">
                <div class="channel-info">
                    <a href="">
                    <img class="channel-avatar" src="<%=owner.avatar %>" alt="Channel Avatar"></a>
                    <div class="channel-details">
                        <div class="channel-name"> <a href="/api/v1/auth/user/channel/<%=owner.username %>" class="channe-name-link"><%=owner.username %></a></div>
                        <div class="channel-subscribers">
                            <%= video.owner.subscribersCount %> subscribers
                        </div>
                    </div>
                </div>

                <div class="action-buttons">
                    <button class="like-button">
                        üëç <%= video.likes %> Likes
                    </button>
                    <button class="subscribe-button">
                        Subscribe
                    </button>
                </div>
            </div>

            <div class="video-description">
                <div class="description-views">
                    <%= video.views %> views ‚Ä¢ <%= new Date(video.createdAt).toLocaleDateString() %>
                </div>
                <div class="description-text">
                    <%= video.description %>
                </div>
            </div>

            <!-- Comments Section -->
            <!-- Comments Section -->
<div class="comments-section">
    <div class="comments-header">
        <h3><%= comments.length %> Comments</h3>
    </div>

    <% if (locals.user) { %>
    <div class="comment-input">
        <img src="<%= user.avatar %>" alt="User Avatar" class="comment-avatar">
        <form action="/api/v1/comments/comments/<%= video._id %>" method="POST" class="w-full">
            <input 
                type="text" 
                name="content" 
                placeholder="Add a comment..." 
                required 
                maxlength="500" 
                class="w-full"
            >
            <button 
                type="submit" 
                class="bg-blue-500 text-white px-4 py-2 rounded mt-2"
            >
                Comment
            </button>
        </form>
    </div>
    <% } %>

    <div class="comments-list">
        <% if (comments.length === 0) { %>
        <div class="no-comments text-center text-gray-500 py-10">
            <p>No comments yet</p>
            <% if (locals.user) { %>
            <p class="text-sm mt-2">Be the first to comment!</p>
            <% } %>
        </div>
        <% } else { %>
            <% comments.forEach(function(comment) { %>
            <div class="single-comment">
                <img 
                    src="<%= comment.owner.avatar %>" 
                    alt="<%= comment.owner.username %>" 
                    class="comment-avatar"
                >
                <div class="comment-content">
                    <div class="comment-author">
                        <%= comment.owner.username %>
                    </div>
                    <div class="comment-text">
                        <%= comment.content %>
                    </div>
                    <div class="comment-meta text-sm text-gray-500 mt-1">
                        <%= new Date(comment.createdAt).toLocaleDateString() %>
                    </div>
                </div>
            </div>
            <% }); %>
        <% } %>
    </div>
</div>

        <!-- Recommended Videos Section -->
    

    <script>
        // Make recommended videos clickable
        document.querySelectorAll('.recommended-video').forEach(function(videoCard) {
            videoCard.addEventListener('click', function() {
                const videoId = this.getAttribute('data-video-id');
                window.location.href = `/watch/${videoId}`;
            });
        });

        // Optional: Like button interaction
        const likeButton = document.querySelector('.like-button');
        likeButton.addEventListener('click', function() {
            // Placeholder for like functionality
            alert('Like functionality to be implemented');
        });

        // Optional: Subscribe button interaction
        const subscribeButton = document.querySelector('.subscribe-button');
        subscribeButton.addEventListener('click', function() {
            // Placeholder for subscribe functionality
            alert('Subscribe functionality to be implemented');
        });
    </script>
</body>
</html>